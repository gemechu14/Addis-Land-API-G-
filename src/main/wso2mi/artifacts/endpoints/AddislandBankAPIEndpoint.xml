<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="AddislandBankAPIEndpoint" xmlns="http://ws.apache.org/ns/synapse">
    <http uri-template="https://addisland-api.aii.et">
        <timeout>
            <duration>30000</duration>
            <responseAction>fault</responseAction>
        </timeout>
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>


