<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="TokenValidationEndpoint" xmlns="http://ws.apache.org/ns/synapse">
    <http uri-template="http://localhost:3000/validate-token" method="post">
        <timeout>
            <duration>5000</duration>
            <responseAction>fault</responseAction>
        </timeout>
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>


